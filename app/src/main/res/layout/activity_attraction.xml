<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AttractionActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/attraction_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimaryDark"
            android:scaleType="centerCrop"
            android:src="@drawable/gediminas_avenue" />

        <TextView
            android:id="@+id/attraction_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            android:paddingBottom="12dp"
            android:text="@string/gediminas_avenue_name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/attraction_header" />

        <ImageView
            android:id="@+id/locaction_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"
            app:layout_constraintStart_toStartOf="@id/attraction_name"
            app:layout_constraintTop_toBottomOf="@id/attraction_name" />

        <TextView
            android:id="@+id/attraction_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/textColor"
            android:paddingBottom="12dp"
            android:text="@string/gediminas_avenue_location"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/attraction_name"
            app:layout_constraintStart_toEndOf="@id/locaction_icon"
            app:layout_constraintTop_toBottomOf="@id/attraction_name" />

        <TextView
            android:id="@+id/attraction_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/admission_free"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/attraction_name"
            app:layout_constraintStart_toStartOf="@id/attraction_name"
            app:layout_constraintTop_toBottomOf="@id/attraction_location" />

        <TextView
            android:id="@+id/attraction_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:paddingBottom="30dp"
            android:text="@string/gediminas_avenue_desc"
            app:layout_constraintEnd_toEndOf="@id/attraction_name"
            app:layout_constraintStart_toStartOf="@id/attraction_name"
            app:layout_constraintTop_toBottomOf="@id/attraction_fee" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>